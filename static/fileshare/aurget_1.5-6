# utilities {{{
# set the term titlebar
set_title() { [ "$TERM" != "linux" ] && echo -ne "\033]0;$(basename "$0")\007"; }

# notification messages
display() { echo -e "\e${colorB}:: \e${colorW}$1\e[0m"; }

# warning messages
warn() { echo -e "\e${colorY}warning: \e[0m$1"; }

# error messages
errorout() {
  echo -e "\e${colorR}error: \e[0m$2"

  # pass '2' to make user aware of leftover files
  [ $1 -eq 2 ] && echo "Note: source files may still be in $WD"

  exit $1
}

# set up environment
make_clean() {
  # wipe temp dir
  rm -rf "$WD"
  mkdir -p "$WD"

  # create package dir
  [ -d "$PD" ] || mkdir -p "$PD"
}

# cleanup and exit
clean_exit() { 
  rm -rf "$WD"

  # allow custom exit status
  exit "${1:-0}"
}

# prompt user
prompt() {
  echo -n "$*? [Y/n] " && read A

  case "${A:-y}" in
    y|Y) return 0     ;;
    q|Q) clean_exit 1 ;; # hidden opt
    *)   return 1     ;;
  esac
}

# toggle a 0|1 option
toggle_opt() {
  if [ $1 -eq 0 ]; then
    echo 1
  else
    echo 0
  fi
}

