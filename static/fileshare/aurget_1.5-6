# source makepkg.conf {{{
source_makepkg() {
  local IFS=':' confs="/etc/makepkg.conf:$HOME/.makepkg.conf"

  for conf in $confs; do
    [ -f "$conf" ] && . "$conf"
  done

  pkgext="${PKGEXT:-.pkg.tar.gz}"
}

